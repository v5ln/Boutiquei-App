<?xml version="1.0" encoding="UTF-8" ?>
<Grid
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Boutiquei.Views.StoreCard"
    xmlns:models="clr-namespace:Boutiquei.Models"
    x:DataType="models:Store">
    
    
                <Frame HasShadow="False" BackgroundColor="Transparent">
                    <StackLayout>
                            <Frame CornerRadius="10" HasShadow="False" Padding="0" IsClippedToBounds="True">
                                <Image WidthRequest="148"
                                         HeightRequest="195"
                                        Source="{Binding ProfileImg}"
                                        Aspect="AspectFit"
                                        HorizontalOptions="Center"/>
                            </Frame>
                            <Label Text="{Binding Name}" HorizontalOptions="Center" FontFamily="NSR" FontSize="14" TextColor="#808080"/>
                     </StackLayout>
                  </Frame>
            
</Grid>
